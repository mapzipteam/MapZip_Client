<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/scrollView_review"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <RelativeLayout
            android:id="@+id/parentlayout_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <RelativeLayout
                android:id="@+id/imagelayout_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager_review"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

                <TextView
                    android:id="@+id/test2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/pager_review"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/test"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/test2"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/emotion_review"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_above="@+id/test"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/name_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emotion_review"
                    android:gravity="center"
                    android:padding="10dp"
                    android:singleLine="false"
                    android:text="가게이름"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/mapname_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_review"
                    android:gravity="center"
                    android:layout_marginBottom="15dp"
                    android:text="나만의 지도1"
                    android:textColor="@color/darkgrey" />
            </RelativeLayout>

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_close" />

            <TextView
                android:id="@+id/goodtext_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagelayout_review"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rec_review_goodtext_bg"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@color/textbrown"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/goodtext_review"
                android:layout_marginLeft="25dp"
                android:text=":)"
                android:textColor="@color/textbrown"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/badtext_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goodtext_review"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rec_review_badtext_bg"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/badtext_review"
                android:layout_marginLeft="25dp"
                android:text=":("
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/badtext_review"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rec_review_goodtext_bg"
                android:gravity="left"
                android:textColor="@color/darkgrey"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_review"
                android:layout_marginLeft="25dp"
                android:text="☆"
                android:textColor="@color/darkgrey"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tag_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="# "
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/text_review"
                android:textColor="@color/grey"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/hashlayout_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_review"
                android:layout_toRightOf="@+id/tag_review"
                android:gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/tagText_review"
                            style="@style/hashtag_style_review"
                            android:text="해" />

                        <TextView
                            android:id="@+id/tagText2_review"
                            style="@style/hashtag_style_review"
                            android:layout_marginLeft="10dp"
                            android:text="쉬" />

                        <TextView
                            android:id="@+id/tagText3_review"
                            style="@style/hashtag_style_review"
                            android:layout_marginLeft="10dp"
                            android:text="태" />

                        <TextView
                            android:id="@+id/tagText4_review"
                            style="@style/hashtag_style_review"
                            android:layout_marginLeft="10dp"
                            android:text="그" />

                        <TextView
                            android:id="@+id/tagText5_review"
                            style="@style/hashtag_style_review"
                            android:layout_marginLeft="10dp"
                            android:text="맛집" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/address_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hashlayout_review"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:padding="5dp"
                    android:text="주소    " />

                <TextView
                    android:id="@+id/address_text_review"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:padding="5dp"
                    android:singleLine="false"
                    android:text="서울특별시 동작구 상도1동 숭실대학교 지하1층 티맥스" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contact_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_review"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:padding="5dp"
                    android:text="연락처    " />

                <TextView
                    android:id="@+id/contact_text_review"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:padding="5dp"
                    android:singleLine="false"
                    android:text="02-1234-5678" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_review"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/modifyBtn_review"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="5"
                    android:background="@drawable/review_enroll_btn_after"
                    android:onClick="modifyOnclick"
                    android:text="수  정"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <Button
                    android:id="@+id/deleteBtn_review"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="5"
                    android:background="@drawable/review_enroll_btn_after"
                    android:onClick="deleteOnclick"
                    android:text="삭  제"
                    android:textColor="@color/white"
                    android:textSize="17dp" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>