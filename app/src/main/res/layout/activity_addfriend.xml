<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/search_layout_addfriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/mainYellow">

        <EditText
            android:id="@+id/searchText_addfriend"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="8"
            android:background="#ffffff"
            android:padding="10dp"
            android:singleLine="true"
            android:maxLength="13"
            android:hint="ID로 검색" />

        <Button
            android:id="@+id/searchBtn_addfriend"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:onClick="addFriend_search"
            android:background="@drawable/searchbtn" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
    <TextView
        android:id="@+id/addfriendText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_margin="10dp"
        android:text="이름 (ID)\n리뷰수: 123"
        android:visibility="gone"/>

    <Button
        android:id="@+id/addfriendBtn"
        android:onClick="addFriend_enroll"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="친구추가"
        android:visibility="gone"/>
    </LinearLayout>


</LinearLayout>