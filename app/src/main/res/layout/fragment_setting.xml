<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mailLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center">

    <ImageView android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/mail"
        android:layout_margin="10dp"
        android:id="@+id/mailIcon"/>

    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:text="개발자에게 건의하기"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leaveLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center">

        <ImageView android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/leave"
            android:layout_margin="10dp"
            android:id="@+id/leaveIcon"/>

        <TextView
            android:id="@+id/txtLabel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:text="회원탈퇴 하기"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fetchLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center">

        <ImageView android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/fetch"
            android:layout_margin="10dp"
            android:id="@+id/fetchIcon"/>

        <TextView
            android:id="@+id/txtLabel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:text="최신공지사항 확인하기"/>
    </LinearLayout>

</LinearLayout>
