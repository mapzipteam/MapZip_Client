<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <TextView
        android:id ="@+id/friend_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="맵갈피"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="#fbcd59"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/addBtn_friend"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/addfriend2"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@+id/friend_list"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/delBtn_friend"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/addfriend"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@+id/friend_list"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"/>

    <ListView
        android:id="@+id/friendList_friend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addBtn_friend"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:listSelector="@color/transparent"></ListView>


</RelativeLayout>
